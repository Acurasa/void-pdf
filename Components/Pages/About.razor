@page "/about"

<PageTitle>About</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Class="pa-6">
        <MudText Typo="Typo.h3" GutterBottom="true">VoidPDF Tools</MudText>

        <MudText Typo="Typo.body1" Class="mb-4">
            VoidPDF is an <strong>open-source</strong>, completely free tool designed to work with PDF files effortlessly.<br>
            It helps enhance privacy, keep corporate secrets and so on. I'll be adding new features with time.
        </MudText>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.body1" Class="mb-4">
            Check out the source code and contribute on GitHub:
        </MudText>

        <MudStack Direction="Row" Spacing="2">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="https://github.com/Acurasa/void-pdf" Target="_blank" StartIcon="@Icons.Material.Filled.Queue">
                GitHub Repository
            </MudButton>

            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="https://paypal.me/acurasa?country.x=PL&locale.x=en_US" Target="_blank" StartIcon="@Icons.Material.Filled.Favorite">
                Say Thanks
            </MudButton>
        </MudStack>

    </MudPaper>
</MudContainer>
